<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
           name="vm"
           type="com.example.myapplication.viewmode.example.CalculatorViewmodel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".viewmode.example.CalculatorActivity">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@{vm.phoneInfo}"
            android:layout_height="50dp"></TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:onClick="@{()->vm.addPhoneNumber(1)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textStyle="bold"
                android:onClick="@{()->vm.addPhoneNumber(2)}"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:onClick="@{()->vm.addPhoneNumber(3)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:onClick="@{()->vm.addPhoneNumber(4)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:onClick="@{()->vm.addPhoneNumber(5)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:onClick="@{()->vm.addPhoneNumber(6)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:onClick="@{()->vm.addPhoneNumber(7)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:onClick="@{()->vm.addPhoneNumber(8)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:onClick="@{()->vm.addPhoneNumber(9)}"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:background="@drawable/bg_jisuaji"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dete"
            android:layout_width="300dp"
            android:background="@drawable/bg_jisuaji"
            android:layout_marginTop="50dp"
            android:text="点击删除"
            android:gravity="center"
            android:layout_height="50dp"></TextView>

    </LinearLayout>
</layout>